{
    "type": "object",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "id": {
            "type": "string"
        },
        "title": {
            "type": "string"
        },
        "questions": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [{
                        "$ref": "#/definitions/text"
                    },
                    {
                        "$ref": "#/definitions/selection"
                    },
                    {
                        "$ref": "#/definitions/rating"
                    },
                    {
                        "$ref": "#/definitions/comment"
                    }
                ]
            }
        }
    },
    "required": ["id", "title", "questions"],
    "additionalProperties": false,
    "definitions": {
        "text": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "text"
                },
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "validations": {
                    "$ref": "#/definitions/validations"
                }
            },
            "required": ["type", "id", "title"],
            "additionalProperties": false
        },
        "selection": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "selection"
                },
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "validations": {
                    "$ref": "#/definitions/validations"
                },
                "options": {
                    "$ref": "#/definitions/options"
                }
            },
            "required": ["type", "id", "title", "options"],
            "additionalProperties": false
        },
        "rating": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "rating"
                },
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "validations": {
                    "$ref": "#/definitions/validations"
                },
                "range": {
                    "type": "array",
                    "items": {
                        "anyOf": [{
                                "type": "string"
                            },
                            {
                                "type": "number"
                            }
                        ]
                    }
                },
                "lowEndLabel": {
                    "type": "string"
                },
                "highEndLabel": {
                    "type": "string"
                }
            },
            "required": ["type", "id", "title", "range"],
            "additionalProperties": false
        },
        "comment": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "comment"
                },
                "id": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "validations": {
                    "$ref": "#/definitions/validations"
                }
            },
            "required": ["type", "id", "title"],
            "additionalProperties": false
        },
        "options": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        },
        "validations": {
            "type": "object",
            "properties": {
                "presence": {
                    "type": "object",
                    "properties": {
                        "mandatory": {
                            "type": "boolean"
                        },
                        "message": {
                            "type": "string"
                        }
                    },
                    "required": ["mandatory"],
                    "additionalProperties": false
                },
                "length": {
                    "type": "object",
                    "properties": {
                        "min": {
                            "type": "object",
                            "properties": {
                                "value": {
                                    "type": "integer",
                                    "inclusiveMinimum": 1
                                },
                                "message": {
                                    "type": "string"
                                }                                 
                            },
                            "additionalProperties": false,
                            "required": ["value"]
                        },
                        "max": {
                            "type": "object",
                            "properties": {
                                "value": {
                                    "type": "integer",
                                    "inclusiveMinimum": 1
                                },
                                "message": {
                                    "type": "string"
                                }                                 
                            },
                            "additionalProperties": false,
                            "required": ["value"]
                        }
                    },
                    "additionalProperties": false,
                    "anyOf": [
                        {
                            "required": [
                                "min"
                            ]
                        },
                        {
                            "required": [
                                "max"
                            ]
                        }                        
                    ]
                }
            }
        }
    }

}