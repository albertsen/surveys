{
    "type": "object",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "id": {
            "type": "string",
            "title": "Unique ID of the survey"
        },
        "title": {
            "type": "string",
            "title": "Title of the survey"
        },
        "questions": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [
                    { "$ref": "#/definitions/text" },
                    { "$ref": "#/definitions/selection" },
                    { "$ref": "#/definitions/rating" },
                    { "$ref": "#/definitions/comment" }
                ]
            }
        }
    },
    "required": ["id", "title", "questions"],
    "definitions": {
        "text": {
            "type": "object",
            "properties": {
              	"type": {
                  	"type": "string",
                    "const": "text"
                },
                "id": {
                    "type": "string",
                    "title": "Unique ID of the question"
                },
                "title": {
                    "type": "string",
                    "title": "Title of the question"
                },
                "mandatory": {
                    "type": "boolean",
                    "title": "Is it mandatory to answer this question?",
                    "default": true
                }
            },
            "required": ["type", "id", "title"]
        },
        "selection": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "selection"
                },
                "id": {
                    "type": "string",
                    "title": "Unique ID of the question"
                },
                "title": {
                    "type": "string",
                    "title": "Title of the question"
                },
                "mandatory": {
                    "type": "boolean",
                    "title": "Is it mandatory to answer this question?",
                    "default": true
                },
                "options": {
                    "$ref": "#/definitions/options"
                }
            },
            "required": ["type", "id", "title", "options"]
        },
        "rating": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "rating"
                },
                "id": {
                    "type": "string",
                    "title": "Unique ID of the question"
                },
                "title": {
                    "type": "string",
                    "title": "Title of the question"
                },
                "mandatory": {
                    "type": "boolean",
                    "title": "Is it mandatory to answer this question?",
                    "default": true
                },
                "range": {
                    "type": "array",
                    "title": "Is it mandatory to answer this question?",
                    "items": {
                        "type": "integer"
                    }
                },
                "lowEndLabel": {
                    "type": "string",
                    "title": "The label of the low end of the range"
                },
                "highEndLabel": {
                    "type": "string",
                    "title": "The label of the high end of the range"
                }
            },
            "required": ["type", "id", "title", "range"]                
        },
        "comment": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "const": "comment"
                },                
                "id": {
                    "type": "string",
                    "title": "Unique ID of the question"
                },
                "title": {
                    "type": "string",
                    "title": "Title of the question"
                },
                "mandatory": {
                    "type": "boolean",
                    "title": "Is it mandatory to answer this question?",
                    "default": true
                },
                "maxlength": {
                    "type": "integer",
                    "title": "The maximum length of the comment",
                    "default": 500
                }
            },
            "required": ["type", "id", "title"]                
        },
        "options": {
            "type": "object",
            "additionalProperties": {
                "type": "string"
            }
        }
    }
    
}